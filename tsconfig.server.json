{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2020",
        "outDir": "./dist",
        "moduleResolution": "node",
        "strict": true,
        "noEmit": false,
        "isolatedModules": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["server.mts", "server/**/*.ts"],
    "exclude": ["node_modules"]
}
